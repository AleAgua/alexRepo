    <script type="text/javascript" src="./js/bootstrap.min.js"></script>
    <script type="text/javascript">
      fetch("http://34.239.250.244:3000/api/v1/peliculas").then(response => {
          if(response.ok) {
              return response.json();
          }
      }).then(data => {
          if(data) {
              console.log(data); 

              const ar = data; 
                let result = `<table class='table table-striped table-bordered table-hover text-center'><thead>
                              <tr>
                             
                                <th>NombrePeliculas</th>
                                <th>existencias</th>
                                <th>precioPeliculas</th>
                                <th>NombreProveedor</th>
                                <th>Imagen</th>
                                <th>Acciones</th>
                              </tr>
                              </thead><tbody>`;
                ar.forEach((elem) => {
                    result += `<tr>
                        
                        <td class=v-align-middle>${elem.NombrePeliculas}</td>
                        <td class=v-align-middle>${elem.existencias}</td>
                        <td class=v-align-middle>${elem.precioPeliculas}</td>
                        <td class=v-align-middle>${elem.Idproveedor}</td>
                        <td class=v-align-middle><img src=http://34.239.250.244:3000/uploads/${elem.img} class=img-fluid style=max-width:50px></td>
                        <td class=v-align-middle>

                          <form action="http://34.239.250.244:3000/api/v1/peliculas/eliminar/${elem.Idpeliculas}" method="POST" onsubmit="return confirmarEliminar()">        

                            <a href="/leer?id=${elem.Idpeliculas}" class="btn btn-dark">Detalles</a>

                            <a href="/actualizar?id=${elem.Idpeliculas}" class="btn btn-primary">Editar</a>

                            <button type="submit" class="btn btn-danger">Eliminar</button>

                          </form>  

                        </td>
                      </tr>`
                });
                result += `</tbody></table>`;
                document.getElementById("tabladatos").innerHTML = result;
           };

          }
      ).catch(err => console.error(err));      
    </script>

    <script type="text/javascript">
      function confirmarEliminar()
      {
      var x = confirm("Estas seguro de Eliminar?");
      if (x)
        return true;
      else
        return false;
      }
    </script>
    
