        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/provin">proveedor</a></li>
            <li class="breadcrumb-item active" aria-current="page">Actualizar</li>
          </ol>
        </nav>
        
        <div class="row">

          <div class="col-md-12">

              <div class="content-box-large">

                <div class="panel-heading">
                <div class="panel-title"><h2>Actualizar</h2></div>             
                    
              </div>
                
                <div class="panel-body">
                                  
                    <section class="example mt-4">

                      <form id="actualizar" method="POST" role="form" >

                        <input type="hidden" name="id" id="id"> 

                        <div class="mb-3">
                          <label for="NombreProoveedor" class="negrita">NombreProoveedor:</label>
                          <div>
                            <input class="form-control" placeholder="name" required="required" name="NombreProoveedor" type="text" id="NombreProoveedor">
                          </div>
                        </div>
                      
                        <div class="mb-3">
                          <label for="Telefono" class="negrita">Telefono:</label>
                          <div>
                            <input class="form-control" placeholder="#33" required="required" name="Telefono" type="text" id="Telefono">
                          </div>
                        </div>  
                      
                      <button type="submit" class="btn btn-info">Guardar</button>
			<a href="/provin" class="btn btn-warning">Cancelar</a>
                                                          
                      </form>                                      
                                    
                    </section>

                </div>

              </div>

          </div>

        </div>

      </div>

      </div>

        </div>
              
            </div>

          </div>          

          <hr>       
          
        </div>

    <script type="text/javascript" src="./js/bootstrap.min.js"></script> 

    <script type="text/javascript"> 

        var url = new URL(window.location.href);
        const id = url.searchParams.get("id");

        fetch("http://localhost:3000/api/v1/proveedores/"+ id).then(response => {
            if(response.ok) {
                return response.json();
            }
        }).then(data => {
            if(data) {
                console.log(data); 
                      document.getElementById("id").setAttribute('value',data._id); 
                      document.getElementById('actualizar').action = "http://localhost:3000/api/v1/proveedores/"+ data._id;
                      document.getElementById("NombreProoveedor").setAttribute('value',data.NombreProoveedor);
                      document.getElementById("Telefono").setAttribute('value',data.Telefono); 
            };

            }
        ).catch(err => console.error(err));
    </script>
    
  </body>
